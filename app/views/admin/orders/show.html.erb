<div class = "row">
	<div class = "col-xs-offset-2">
		<h3>注文履歴詳細</h3>
	</div>
</div>
<br><br>

<%= form_for(@order, url: admin_order_path(@order)) do |f| %>
	<div class = "row">
		<div class = "col-xs-1">
		</div>
		<div class = "col-xs-2">
			<b>購入者</b>
		</div>
		<div class = "col-xs-9">
			<%= link_to "#" do %>
				<%= @order.end_user.last_name + "　" + @order.end_user.first_name %>
			<% end %>
		</div>
	</div><br>

	<div class = "row">
		<div class = "col-xs-1">
		</div>
		<div class = "col-xs-2">
			<b>配送先</b>
		</div>
		<div class = "col-xs-9">
			<%= "〒" + @order.postal_code + " " + @order.destination_address %><br>
			<%= @order.consignee %>
		</div>
	</div><br>


	<div class = "row">
		<div class = "col-xs-1">
		</div>
		<div class = "col-xs-2">
			<b>支払方法</b>
		</div>
		<div class = "col-xs-9">
			<%= @order.payment_method_i18n %>
		</div>
	</div><br>

	<div class = "row">
		<div class = "col-xs-1">
		</div>
		<div class = "col-xs-2">
			<b>注文ステータス</b>
		</div>
		<div class = "col-xs-2">
			<%= f.select :status, Order.statuses.keys.map {|k| [I18n.t("enums.order.status.#{k}"), k]} %>
		</div>
		<div class = "col-xs-2">
			<%= f.submit "更新", class: "btn btn-primary" %>
		</div>
	</div><br>
<% end %>

<br><br>

<div class = "row">
	<div class = "col-xs-1">
	</div>
	<div class = "col-xs-7">
		<table class = "table" style = "border-bottom: solid; border-width: 1px; border-color: #ddd;">
			<tr class = "active">
				<th>商品名</th>
				<th>単価(税込)</th>
				<th>個数</th>
				<th>小計</th>
				<th>製作ステータス</th>
				<th></th>
			</tr>
			<% @sum = 0 %>
			<% @order_details.each do |detail| %>
				<tr>
					<%= form_for(detail, url: admin_order_detail_path(detail.id)) do |f| %>
						<td><%= detail.item.name %></td>
						<td>
							<% taxed_price = detail.non_taxed_price * 1.1 %>
							<%= taxed_price.ceil %>
						</td>
						<td><%= detail.amount %></td>
						<td>
							<% subtotal = detail.amount * taxed_price.ceil %>
							<%= subtotal %>
						</td>
						<td>
							<%= f.select :production_status, OrderDetail.production_statuses.keys.map {|k| [I18n.t("enums.order_detail.production_status.#{k}"), k]} %>
						</td>
						<td><%= f.submit "更新", class: "btn btn-primary" %></td>

						<% @sum += subtotal %>
					<% end %>
				</tr>
			<% end %>
		</table>
	</div>
	<div class = "col-xs-4">
		<div class = "row" style = "margin-top: 70px;">
			<div class = "col-xs-1">
			</div>
			<div class = "col-xs-4">
				<b>商品合計</b>
			</div>
			<div class = "col-xs-3 text-right">
				<%= @sum %>円
			</div>
			<div class = "col-xs-4">
			</div>
		</div><br>

		<div class = "row">
			<div class = "col-xs-1">
			</div>
			<div class = "col-xs-4">
				<b>送料</b>
			</div>
			<div class = "col-xs-3 text-right">
				<%= @order.postage %>円
			</div>
			<div class = "col-xs-4">
			</div>
		</div><br>

		<div class = "row">
			<div class = "col-xs-1">
			</div>
			<div class = "col-xs-4">
				<b>請求金額合計</b>
			</div>
			<div class = "col-xs-3 text-right">
				<b><%= @order.total_payment %>円</b>
			</div>
			<div class = "col-xs-4">
			</div><br>
		</div>
	</div>
