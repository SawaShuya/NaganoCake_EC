.row
  .col-xs-offset-2
    h3
      | 商品一覧
br
.row
  .col-xs-offset-10
    = link_to new_admin_item_path do
      span.glyphicon.glyphicon-plus-sign[aria-hidden="true" style="font-size: 40px; color:#008000;"]
br
.row
  .col-xs-1

  .col-xs-10
    table.table[style="border-bottom: solid; border-width: 1px; border-color: #ddd;"]
      thead
        tr.active
          th
            | 商品ID
          th
            | 商品名
          th
            | 税抜価格
          th
            | ジャンル
          th
            | ステータス
      tbody
        - @items.each do |item|
          tr
            td
              = item.id
            td
              = link_to admin_item_path(item.id) do
                = item.name
            td
              = item.non_taxed_price
            td
              = item.genre.name
            td
              - if item.is_active == true
                p
                  | 販売中
              - else
                p
                  | 販売停止中
  .col-xs-1
