.row
  .col-xs-offset-2
    h3
      | ジャンル一覧・追加
br
= render "admin/admins/shared/error_messages", resource: @genre_new
.row
  = form_for(@genre_new, url: admin_genres_path) do |f|
    .col-xs-1

    .col-xs-1
      label
        | ジャンル
    .col-xs-2
      = f.text_field :name
    .col-xs-1
      lavel
        = f.radio_button :is_active, :true
        | 有効
    .col-xs-1
      lavel
        = f.radio_button :is_active, :false
        | 無効
    .col-xs-1
      = f.submit "追加", class: "btn btn-primary"
br
.row
  .col-xs-1

  .col-xs-5
    table.table[style="border-bottom: solid; border-width: 1px; border-color: #ddd;"]
      thead
        tr.active
          th
            | ジャンル
          th
            | 状態
          th
      tbody
        - @genres.each do |genre|
          tr
            td
              = genre.name
            td
              - if genre.is_active == true
                p
                  | 有効
              - else
                p
                  | 無効
            td
              = link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary"
  .col-xs-6
