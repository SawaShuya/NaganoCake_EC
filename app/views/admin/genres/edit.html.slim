.row
  .col-xs-offset-2
    h3
      | ジャンル編集
br
= render "admin/admins/shared/error_messages", resource: @genre
.row
  = form_for(@genre, url: admin_genre_path) do |f|
    .col-xs-1

    .col-xs-1
      label
        | ジャンル
    .col-xs-2
      = f.text_field :name
    .col-xs-1
      lavel
        = f.radio_button :is_active, :true
        | 有効
    .col-xs-1
      lavel
        = f.radio_button :is_active, :false
        | 無効
    .col-xs-1
      = f.submit "変更を保存する", class: "btn btn-primary"
