.row
  .col-xs-offset-2
    h3
      | 新規会員登録
br
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "public/end_users/shared/error_messages", resource: resource
  .field
    .row
      .col-xs-2

      .col-xs-2
        label
          | 名前
        label[style="float:right;"]
          | (姓)　
      .col-xs-3
        = f.text_field :last_name, autofocus: true
      .col-xs-3
        label
          | (名)　
        = f.text_field :first_name, autofocus: true
      .col-xs-2

  .field
    .row
      .col-xs-2

      .col-xs-2
        label
          | フリガナ
        label[style="float:right;"]
          | (セイ)
      .col-xs-3
        = f.text_field :kana_last_name, autofocus: true
      .col-xs-3
        label
          | (メイ)
        = f.text_field :kana_first_name, autofocus: true
      .col-xs-2

  .field
    .row
      .col-xs-2

      .col-xs-2
        label
          | メールアドレス
      .col-xs-3
        = f.email_field :email, autofocus: true, autocomplete: "email"
      .col-xs-5

  .field
    .row
      .col-xs-2

      .col-xs-2
        label
          | 郵便番号(ハイフンなし)
      .col-xs-3
        = f.text_field :postal_code, autofocus: true
      .col-xs-5

  .field
    .row
      .col-xs-2

      .col-xs-2
        label
          | 住所
      .col-xs-6
        = f.text_field :address, autofocus: true
      .col-xs-2

  .field
    .row
      .col-xs-2

      .col-xs-2
        label
          | 電話番号(ハイフンなし)
      .col-xs-3
        = f.text_field :telephone_number, autofocus: true
  .field
    .row
      .col-xs-2

      .col-xs-2
        label
          | パスワード(6文字以上)
      .col-xs-3
        = f.password_field :password, autocomplete: "new-password"
      .col-xs-5

  .field
    .row
      .col-xs-2

      .col-xs-2
        label
          | パスワード(確認用)
      .col-xs-3
        = f.password_field :password_confirmation, autocomplete: "new-password"
      .col-xs-5

  br
  br
  .row
    .col-xs-offset-6
      .actions
        = f.submit "新規登録"
.link
  .row
    .col-xs-offset-2
      h3
        | すでに登録済みの方
  .row
    .col-xs-offset-3
      p
        = link_to "こちら", new_end_user_session_path
        | からログインしてください
