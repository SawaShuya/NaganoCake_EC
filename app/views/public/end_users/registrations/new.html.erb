<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/end_users/shared/error_messages", resource: resource %>

  <div class="field">
    <label>名前</label>
    <label>(姓)</label>
    <%= f.text_field :last_name, autofocus: true %>

    <label>(名)</label>
    <%= f.text_field :first_name, autofocus: true %>
  </div>

  <div class="field">
    <label>フリガナ</label>
    <label>(セイ)</label>
    <%= f.text_field :kana_last_name, autofocus: true %>

    <label>(メイ)</label>
    <%= f.text_field :kana_first_name, autofocus: true %>
  </div>

  <div class="field">
    <label>メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <label>郵便番号(ハイフンなし)</label>
    <%= f.text_field :postal_code, autofocus: true %>
  </div>

   <div class="field">
    <label>住所</label>
    <%= f.text_field :address, autofocus: true %>
  </div>

  <div class="field">
    <label>電話番号(ハイフンなし)</label>
    <%= f.text_field :telephone_number, autofocus: true %>
  </div>

  <div class="field">
    <label>パスワード(6文字以上)</label>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <label>パスワード(確認用)</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<div class = "link">
  <span>すでに登録済みの方</span><br>
  <p><%= link_to "こちら", new_end_user_session_path %>からログインしてください</p>
</div>

