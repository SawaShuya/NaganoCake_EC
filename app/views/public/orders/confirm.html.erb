<h2>注文確認画面</h2>

<div class = "row">
	<div class = "col-xs-1">
	</div>
	<div class = "col-xs-7">
		<table class = "table table-bordered" style = "border-bottom: solid; border-width: 1px; border-color: #ddd;">
			<thead>
				<tr class = "active">
					<th>商品名</th>
					<th>単価(税込)</th>
					<th>数量</th>
					<th>小計</th>

				</tr>
			</thead>

			<tbody>
				<% sum = 0 %>
				<% @cart_items.each do |cart_item| %>
					<tr>
						<td class = "col-xs-4">
							<%= attachment_image_tag cart_item.item, :item_image, size: "40x40", fallback: "no_image.jpg" %>
							<%= cart_item.item.name %>
						</td>
						<td class = "col-xs-2">
							<% cart_item_taxed_price = cart_item.item.non_taxed_price * 1.1 %>
							<% cart_item_taxed_price = cart_item_taxed_price.ceil %>
							<%= cart_item_taxed_price %>
						</td>
						<td class = "col-xs-2">
							<%= cart_item.amount %>
						</td>
						<td class = "col-xs-2">
							<% cart_item_subtotal = cart_item_taxed_price * cart_item.amount %>
							<% sum += cart_item_subtotal %>
							<%= cart_item_subtotal %>
						</td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>

	<div class = "col-xs-3">
		<table class = "table table-bordered">
			<tbody>
				<tr>
					<td class = "active">送料</td>
					<td><%= @order.postage %></td>
				</tr>
				<tr>
					<td class = "active">商品合計</td>
					<td><%= sum %></td>
				</tr>
					<td class = "active">請求金額</td>
					<% @total_payment = sum + @order.postage %>
					<td><%= @total_payment %></td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class = "col-xs-1">
	</div>
</div>

<div class = "row">
	<div class = "col-xs-1">
	</div>
	<div class = "col-xs-2">
		<p>支払い方法</p>
	</div>
	<div class = "col-xs-3">
		<%= @order.payment_method_i18n %>
	</div>
		<div class = "col-xs-6">
	</div>
</div>

<div class = "row">
	<div class = "col-xs-1">
	</div>
	<div class = "col-xs-2">
		<p>お届け先</p>
	</div>
	<div class = "col-xs-3">
		<%= @order.postal_code + @order.destination_address %><br>
		<%= @order.consignee %>
	</div>
	<div class = "col-xs-6">
	</div>
</div>

<div class = "row">
	<div class = "col-xs-offset-5">
		<%= form_for(@order, url: orders_path) do |f| %>
			<%= f.hidden_field :postage %>
			<%= f.hidden_field :total_payment, :value => @total_payment %>
			<%= f.hidden_field :consignee %>
			<%= f.hidden_field :postal_code %>
			<%= f.hidden_field :destination_address %>

			<%= f.submit "購入を確定する",  "data-confirm" => "注文を確定してよろしいですか？", class: "btn btn-success" %>
		<% end %>
	</div>
</div>